<UserControl x:Class="RenderImageLibrary.LockScreenImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot">
        <Image x:Name="BackgroundImage" Stretch="UniformToFill" />
        <TextBlock x:Name="TB1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Text="Text" Margin="135,173,151,520" TextWrapping="Wrap"
                   Style="{StaticResource PhoneTextLargeStyle}" Foreground="White"
                   Width="194" Height="107" />
    </Grid>
</UserControl>